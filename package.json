{
	"name": "@jwrunge/manifold",
	"private": false,
	"version": "0.6.0",
	"type": "module",
	"sideEffects": false,
	"main": "./dist/manifold.js",
	"module": "./dist/manifold.js",
	"types": "./dist/manifold.d.ts",
	"unpkg": "./dist/manifold.umd.js",
	"jsdelivr": "./dist/manifold.umd.js",
	"browser": "./dist/manifold.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/jwrunge/manifold.git"
	},
	"homepage": "https://github.com/jwrunge/manifold",
	"bugs": {
		"url": "https://github.com/jwrunge/manifold/issues"
	},
	"files": [
		"dist/",
		"src/",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"description": "A small, fast reactive templating and state-management library for the modern web.",
	"keywords": [
		"reactive",
		"templating",
		"state-management",
		"no-build",
		"javascript",
		"typescript",
		"dom",
		"framework"
	],
	"author": "jwrunge",
	"license": "MIT",
	"exports": {
		".": {
			"types": "./dist/manifold.d.ts",
			"import": "./dist/manifold.js",
			"default": "./dist/manifold.js"
		},
		"./umd": {
			"default": "./dist/manifold.umd.js"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build && node ./minify.js && npm run -s build:dts && node ./scripts/cleanup-dist.js",
		"build:types": "tsc -p tsconfig.build.json",
		"build:dts": "npm run -s build:types && api-extractor run --local",
		"build:debug": "MF_DEBUG_BUILD=1 tsc && MF_DEBUG_BUILD=1 node ./scripts/build.mjs",
		"test": "vitest --run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"clean:dist-dts": "node ./scripts/cleanup-dist.js",
		"pretest": "npm run -s build",
		"sync:meta": "node ./scripts/sync-meta.js",
		"sync:meta:check": "node ./scripts/sync-meta.js --check"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@microsoft/api-extractor": "^7.52.13",
		"@types/node": "^24.5.2",
		"esbuild": "^0.25.10",
		"jsdom": "^26.1.0",
		"terser": "^5.44.0",
		"typescript": "~5.9.2",
		"vite": "^7.1.7",
		"vitest": "^3.2.4"
	}
}
